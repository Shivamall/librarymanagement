<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightorange"
        android:layout_margin="10dp">

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Of Thrones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/roll_no_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll No : "
        android:layout_below="@+id/book_name"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/roll_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000"
        android:layout_toRightOf="@+id/roll_no_text"
        android:layout_below="@+id/book_name"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/issue_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue Date : "
        android:layout_below="@+id/roll_no_text"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/issue_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_toRightOf="@id/issue_date_text"
        android:layout_below="@+id/roll_no"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:textSize="18sp"/>

        <TextView
            android:id="@+id/book_returned_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Returned"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:layout_below="@+id/issue_date"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

</RelativeLayout>