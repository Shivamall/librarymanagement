<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.studentlibrary.librarymanagement.SearchActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  SEARCH BOOKS"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/text"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Book By ID"
        android:layout_below="@+id/text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:id="@+id/text1"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:hint="Enter ID"
        android:id="@+id/edit1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:textStyle="bold"
        android:layout_alignTop="@+id/text1"
        android:layout_alignRight="@+id/edit1"
        android:layout_alignEnd="@+id/edit1"
       android:onClick="id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Book By Name "
        android:layout_below="@+id/edit1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:id="@+id/text2"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:hint="Enter Name"
        android:id="@+id/edit2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:onClick="name"
        android:textStyle="bold"
        android:layout_alignTop="@+id/text2"
        android:layout_alignRight="@+id/edit2"
        android:layout_alignEnd="@+id/edit2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Book By Author "
        android:layout_below="@+id/edit2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:id="@+id/text3" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:hint="Enter AuthorName"
        android:id="@+id/edit3"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:onClick="author"
        android:textStyle="bold"


        android:layout_alignTop="@+id/text3"
        android:layout_alignRight="@+id/edit3"
        android:layout_alignEnd="@+id/edit3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Book By Department "
        android:layout_below="@+id/edit3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:id="@+id/text4" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
        android:hint="Enter Department"
        android:id="@+id/edit4"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:onClick="dept"
        android:textStyle="bold"

        android:layout_alignTop="@+id/text4"
        android:layout_alignRight="@+id/edit4"
        android:layout_alignEnd="@+id/edit4" />


</RelativeLayout>
